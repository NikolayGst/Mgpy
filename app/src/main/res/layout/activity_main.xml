<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/mdpy1"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Activities.Main.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-light"
            android:text="Группа 314/2"
            android:textColor="@android:color/white"
            android:textSize="45sp"/>


        <Button
            android:id="@+id/redWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/red"
            android:text="Красная неделя"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/greenWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/redWeek"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:background="@color/green"
            android:text="Зеленая неделя"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>


        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/greenWeek"
            android:layout_marginTop="16dp"
            android:text="Первая подгруппа"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first"
            android:text="Вторая подгруппа"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Nikolay Gustilin"
            android:textColor="@android:color/white"/>
    </RelativeLayout>
</RelativeLayout>