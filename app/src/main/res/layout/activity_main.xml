<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mdpy1"
        android:layout_height="wrap_content"/>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.Main.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="45sp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:text="Группа 314/2"
        android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/redWeek"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:text="Красная неделя"
        android:textSize="16sp"
        android:background="@color/red"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/greenWeek"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/redWeek"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:text="Зеленая неделя"
        android:background="@color/green"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentBottom="true"
        android:text="Nikolay Gustilin"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</RelativeLayout>